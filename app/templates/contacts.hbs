<hr>
{{#each model as |person|}}
{{log model}}
{{#if person.first_name}}
<p>First Name: {{person.first_name}}</p>
<p>Last Name: {{person.last_name}}</p>
<p>Address: {{person.address}}</p>
<p>Phone Number: {{person.phone_number}}</p>
<button {{action "deletePerson" person  on="click"}} class="delete-btn">Delete</button>
<hr>
{{/if}}
{{/each}}

<button{{action "toggleContact" on="click"}} class="contact-btn">New Contact</button>
<form  class="contact-form hidden"{{action "addPerson" person on="submit"}}>
<label>First Name</label>
{{input type="text" value=firstName}}

  <label>Last Name</label>
{{input type="text" value=lastName}}
  <label>Address</label>
{{input type="text" value=address}}
  <label>Phone Number</label>
{{input type="text" value=phoneNumber}}
<button>submit</button>
</form>
{{outlet}}
